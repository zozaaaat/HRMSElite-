{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "vite/client",
      "vitest/globals",
      "react",
      "react-dom"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "coverage",
    "tests"
  ]
}

