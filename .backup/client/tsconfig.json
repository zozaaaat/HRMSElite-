{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@pages/*": ["./src/pages/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@stores/*": ["./src/stores/*"],
      "@services/*": ["./src/services/*"],
      "@lib/*": ["./src/lib/*"],
      "@types/*": ["./src/types/*"],
      "@tests/*": ["./tests/*"],
      "@ui/*": ["./src/components/ui/*"]
    },
    "types": [
      "vite/client",
      "vitest/globals",
      "react",
      "react-dom",
      "@testing-library/jest-dom"
    ]
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "dist",
    "coverage",
    "node_modules"
  ]
}
