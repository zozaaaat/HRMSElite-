# HRMS Elite Production Environment Variables
# Copy this file to .env and update the values

# Application Settings
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=/app/data/hrms.db

# Security Keys (CHANGE THESE IN PRODUCTION!)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
CSRF_SECRET=your-csrf-secret-key-change-this-in-production

# AI Services (Optional)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=60
DOCUMENT_RATE_LIMIT_WINDOW_MS=300000
DOCUMENT_RATE_LIMIT_MAX_REQUESTS=10
SEARCH_RATE_LIMIT_WINDOW_MS=60000
SEARCH_RATE_LIMIT_MAX_REQUESTS=30

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/hrms.log

# Redis Configuration (Optional)
REDIS_URL=redis://hrms-elite-redis:6379
REDIS_PASSWORD=hrms-redis-password

# File Upload Settings
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif
UPLOAD_DIR=/app/uploads

# CORS Settings
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true

# SSL/TLS Settings (for development)
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=/backups

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# Email Settings (if implementing email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@your-domain.com

# External Services
EXTERNAL_API_TIMEOUT=30000
EXTERNAL_API_RETRIES=3 