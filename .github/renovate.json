{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":separateMinorPatch",
    ":semanticCommitTypeAll(deps)",
    ":semanticCommitScopeDisabled"
  ],
  "schedule": ["after 3am and before 6am on monday"],
  "rangeStrategy": "pin",
  "prConcurrentLimit": 10,
  "enabledManagers": ["npm"],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["*"],
      "rangeStrategy": "pin"
    }
  ],
  "npm": {
    "lockFileMaintenance": {
      "enabled": true,
      "schedule": ["weekly"]
    }
  }
}

